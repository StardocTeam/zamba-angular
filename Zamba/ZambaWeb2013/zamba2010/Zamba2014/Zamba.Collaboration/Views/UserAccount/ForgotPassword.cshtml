@using CaptchaMvc.HtmlHelpers
@{
    ViewBag.Title = "Olvide contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recuperar contraseña</h2>
<hr />

<form action="ForgotPassword" method="POST">
    @Html.AntiForgeryToken()
    <label>Email:</label> <input required class="form-control" id="txtMail" name="txtMail" type="email" value="" />  
    @Html.MathCaptcha("Actualizar", "Ingrese el codigo:", "Error de codigo, por favor reintente", true)
    <br />
    <span class="field-validation-error text-danger">@TempData["Message"]</span>
    <br />
    <input type="submit" class="btn btn-default" value="*Recuperar" />
</form>
<hr />
<span>
    (*)Tenga en cuenta que la nueva contraseña sera enviada a su mail. Si pasado 5 minutos no lo recibe,
    por favor vuelva a intentarlo.
</span>